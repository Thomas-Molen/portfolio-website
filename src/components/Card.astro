---
import type About from './Views/About.astro';
interface Props {
  title: string;
  info?: string;
}

const { title, info } = Astro.props;

const infoSpanAttributes = {
  ...(info && {
    "style": "cursor:pointer",
    "data-tooltip-placement": "top",
    "title": info
  })
}
---

<div class="card-container">
  <div class="card-title">
    <p class="title m-0">
      <span { ...infoSpanAttributes}>
        {title}
        {info && <sup><i>i</i></sup>}
      </span>
    </p>
  </div>
  <div class="card-body">
    <hr class="m-0"/>
    <slot />
  </div>
</div>

<style>
  .title{
    font-size: 1rem;
    font-weight: bold;
  }
  .card-container {
    color: var(--text-color);
    border-radius: 5px;
    box-shadow: 7px 7px var(--card-shadow);
    background-color: var(--card-color);
    height: 100%;
  }
  .card-container .card-title{
    border-radius: 5px 5px 0 0;
    padding: 10px;
  }
  .card-container .card-body{
    border-radius: 0px 0px 5px 5px;
  }
</style>
