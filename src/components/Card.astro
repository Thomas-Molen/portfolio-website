---
interface Props {
  title: string;
  info?: string;
}

const { title, info } = Astro.props;
---

<div class="card-container">
  <div class="card-title">
    <h4 class="title m-0">
      {title}
      {info && <sup><i class="info" style="cursor:pointer" title={info} data-tooltip-placement="top">i</i></sup>}
  </h4>
  </div>
  <div class="card-body">
    <hr class="m-0"/>
    <slot />
  </div>
</div>

<style>
  .title{
    font-size: 1rem;
  }
  .card-container {
    color: var(--card-text-color);
    border-radius: 5px;
    box-shadow: 7px 7px var(--card-shadow);
    background-color: var(--card-color);
    height: 100%;
  }
  .card-container .card-title{
    border-radius: 5px 5px 0 0;
    padding: 10px;
  }
  .card-container .card-body{
    border-radius: 0px 0px 5px 5px;
  }
</style>
